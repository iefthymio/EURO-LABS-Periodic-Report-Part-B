\def\mylayout{
    \newpage  
    \section*{Page Layout Parameters}
    \begin{itemize}
        \item \textbf{Paper Dimensions:}
        \begin{itemize}
            \item Paper width: \printlength{\paperwidth}
            \item Paper height: \printlength{\paperheight}
        \end{itemize}
    
        \item \textbf{Text Area:}
        \begin{itemize}
            \item Text width: \printlength{\textwidth}
            \item Text height: \printlength{\textheight}
        \end{itemize}
    
        \item \textbf{Margins:}
        \begin{itemize}
            \item Top margin: \printlength{\topmargin}
            \item Left margin (odd pages): \printlength{\oddsidemargin}
            \item Left margin (even pages): \printlength{\evensidemargin}
        \end{itemize}
    
        \item \textbf{Header and Footer:}
        \begin{itemize}
            \item Header height: \printlength{\headheight}
            \item Header separation (distance from text): \printlength{\headsep}
            \item Footer separation (distance from text): \printlength{\footskip}
        \end{itemize}
    
        \item \textbf{Paragraph Settings:}
        \begin{itemize}
            \item Paragraph indent: \printlength{\parindent}
            \item Paragraph spacing: \printlength{\parskip}
        \end{itemize}
    \end{itemize}
    \newpage
}

